{
  "compilerOptions": {
    "lib": ["deno.ns", "dom"]
  },
  "imports": {
    "std/": "https://deno.land/std@0.168.0/",
    "supabase-js": "https://esm.sh/@supabase/supabase-js@2"
  },
  "lint": {
    "rules": {
      "tags": ["recommended"],
      "exclude": ["no-unused-vars"]
    }
  },
  "fmt": {
    "options": {
      "useTabs": true,
      "lineWidth": 80,
      "indentWidth": 4,
      "singleQuote": false
    }
  }
} 